@{
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/css/site.css">
</head>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2>Авторизация</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Login" asp-controller="Login">
                <div class="form-group">
                    <input asp-for="Login" class="form-control" name="Login" placeholder="Логин"/>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" type="password" name="Password" placeholder="Пароль"/>
                </div>
                @ViewData["Message"]
				<div class="text-center">
                	<button type="submit" class="btn btn-primary btn-block">Войти</button>
				</div>
            </form>
        </div>
    </div>
</div>
